{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist-electron",
        "rootDir": "electron",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "electron"
    ]
}